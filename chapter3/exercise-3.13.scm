; init-env : () -> Env
(define init-env
  (lambda ()
    (extend-env
     'i (num-val 1)
     (extend-env
      'v (num-val 5)
      (extend-env
       'x (num-val 10)
       (empty-env))))))

(define empty-env
  (lambda ()
    '()))

(define empty-env? null?)

(define extend-env
  (lambda (sym val env)
    (cons (list sym val) env)))

(define extended-env->sym
  (lambda (e)
    (car (car e))))

(define extended-env->val
  (lambda (e)
    (car (cdr (car e)))))

(define extended-env->old-env
  (lambda (e)
    (cdr e)))

(define apply-env
  (lambda (env search-sym)
    (if (empty-env? env)
        (error 'no-binding)
        (let ((sym (extended-env->sym env))
              (val (extended-env->val env))
              (old-env (extended-env->old-env env)))
          (if (eqv? search-sym sym)
              val
              (apply-env old-env search-sym))))))
(define error
  (lambda (msg)
    (display msg)))


